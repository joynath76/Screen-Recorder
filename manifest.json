{
    "manifest_version": 2,
    "name": "Screen Recorder",
    "description": "Allows you to record your screen",
    "version": "1.0.0",
    "browser_action": {
        "default_icon": "logo-32.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "logo-32.png",
        "128": "logo-32.png",
        "48": "logo-32.png"
    },
    "background":{
        "scripts":["background.js"],
        "persistent": false
    },
    "options_page": "option.html",
    "permissions":[
        "tabCapture"
    ]
}